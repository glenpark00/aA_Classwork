<h1> Edit <%= @cat.name %>! </h1>


<form action='/cats' method='POST'>
<input type= 'hidden' name= _method value= 'PATCH'>

  <label for='name'>Name</label>
  <input id='name' type='text' name='cat[name]' value=' <%= @cat.name %>'>

  <br>
  <br>

  <label for='female'>Female</label>
  <input id='female' type='radio' name='cat[sex]' value= 'F' <%= @cat.sex == 'M' ? '' : 'checked' %>>
  <label for='male'>Male</label>
  <input id='male' type='radio' name='cat[sex]' value='M'<%= @cat.sex == 'F' ? '' : 'checked' %>>


  <br>
  <br>

    <select id="color" name="cat[color]">
    <option disabled >-- please select --</option>
    <% Cat.colors.each do |color| %>
        <option value= <%= color %> <%= @cat.color == color ? 'selected' : ''%>> <%= color %> </option>
    <% end %>
    </select>

    <br>
    <br>

    <label for='birth_date'>Birth Date</label>

    <br>

    <input type='date' id='birth_date' name='cat[birth_date]'>

    <br>
    <br>

    <label for='description'>Description</label>

    <br>
    
    <textarea name='cat[description]'><%= @cat.description %></textarea>

    <br>
    <br>

  <input type='submit' value='Create new cat'>
</form>